<% provide(:title, "Administrator Login") %>
<h1>Log in</h1>

<div class="row">
  <div class="jumbotron col-md-6 col-md-offset-3">
    <%= form_for(:session, url: adminlogin_path) do |f| %>

      <%= f.label :username %>
      <%= f.text_field :username, class: 'form-control' %>

      <%= f.label :password %>
      <%= f.password_field :password, class: 'form-control' %>
		<br />
      <%= f.submit "Login", class: "btn btn-primary" %>
    <% end %>
    <br />
    <p><font size=2>This page is for administrators.</font></p>
  </div>
</div>
